<Window x:Class="PictureSorter.Views.FullscreenImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Viewer" 
        WindowState="Maximized"
        WindowStyle="None"
        Background="Black"
        KeyDown="Window_KeyDown"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Grid>
        <Image x:Name="FullImage" 
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center">
            <Image.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Rotate 90° Clockwise" Click="RotateClockwise_Click"/>
                    <MenuItem Header="Rotate 90° Counter-Clockwise" Click="RotateCounterClockwise_Click"/>
                    <Separator/>
                    <MenuItem Header="Delete Image" Click="DeleteImage_Click"/>
                </ContextMenu>
            </Image.ContextMenu>
        </Image>
        
        <!-- Close instruction -->
        <TextBlock x:Name="NavigationHint"
                   Text="Press ESC or click to close" 
                   Foreground="White"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,20"
                   Opacity="0.7"/>
    </Grid>
</Window>
